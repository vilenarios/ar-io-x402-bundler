{
  "name": "ar-io-bundler-lite",
  "version": "1.0.0",
  "description": "Lightweight Arweave bundler with x402 USDC payments - no account management required",
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf lib",
    "start": "node lib/index.js",
    "start:watch": "nodemon --watch src --ext ts --exec 'yarn build && yarn start'",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "admin": "node admin-server.js",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts' 'tests/**/*.test.ts'",
    "test:unit": "mocha --require ts-node/register 'src/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'tests/**/*.test.ts'",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.test.ts'",
    "typecheck": "tsc --noEmit",
    "db:migrate": "knex migrate:latest --knexfile lib/arch/db/knexfile.js",
    "db:migrate:rollback": "knex migrate:rollback --knexfile lib/arch/db/knexfile.js",
    "db:migrate:new": "knex migrate:make --knexfile src/arch/db/knexfile.ts -x ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v"
  },
  "keywords": [
    "arweave",
    "bundler",
    "x402",
    "usdc",
    "eip-3009",
    "ans-104",
    "ai-agents",
    "stateless"
  ],
  "author": "AR.IO",
  "license": "AGPL-3.0",
  "dependencies": {
    "@alexsasharegan/simple-cache": "^1.2.1",
    "@anthropic-ai/sdk": "^0.32.1",
    "@ardrive/ardrive-promise-cache": "1.2.0-alpha.6",
    "@aws-sdk/client-s3": "3.529.0",
    "@aws-sdk/lib-storage": "3.529.0",
    "@aws-sdk/util-retry": "3.374.0",
    "@smithy/node-http-handler": "^3.0.0",
    "@bull-board/api": "^6.13.1",
    "@bull-board/koa": "^6.13.1",
    "@coinbase/coinbase-sdk": "^0.10.0",
    "@coinbase/x402": "^0.7.1",
    "@cosmjs/amino": "^0.32.3",
    "@cosmjs/crypto": "^0.32.3",
    "@cosmjs/encoding": "^0.32.3",
    "@dha-team/arbundles": "^1.0.1",
