# AR.IO Bundler Lite - Admin Dashboard Dockerfile
# Multi-stage build for admin dashboard

###############################################################################
# Stage 1: Builder - Build TypeScript to get lib/ files
###############################################################################
FROM node:20-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git \
    openssl

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies
RUN yarn install --frozen-lockfile

# Copy source code
COPY tsconfig.json ./
COPY src ./src

# Build TypeScript
RUN yarn build

###############################################################################
# Stage 2: Runtime - Admin dashboard
###############################################################################
FROM node:20-alpine

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    dumb-init \
    openssl

# Create non-root user BEFORE copying files
RUN addgroup -g 1001 -S admin && \
    adduser -S admin -u 1001

# Copy files with correct ownership from the start
COPY --chown=admin:admin package.json yarn.lock ./
COPY --chown=admin:admin --from=builder /app/node_modules ./node_modules
COPY --chown=admin:admin admin-server.js ./
COPY --chown=admin:admin admin ./admin
COPY --chown=admin:admin --from=builder /app/lib/constants.js ./lib/
COPY --chown=admin:admin --from=builder /app/lib/arch/queues ./lib/arch/queues

# Switch to non-root user
USER admin

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
  CMD node -e "require('http').get('http://localhost:${BULL_BOARD_PORT:-3002}/admin/stats', {headers:{'Authorization':'Basic '+Buffer.from((process.env.ADMIN_USERNAME||'admin')+':'+(process.env.ADMIN_PASSWORD||'')).toString('base64')}}, (r) => { process.exit(r.statusCode === 200 || r.statusCode === 401 ? 0 : 1); })"

# Expose port
EXPOSE 3002

# Use dumb-init to handle signals properly
ENTRYPOINT ["/usr/bin/dumb-init", "--"]

# Start the admin dashboard
CMD ["node", "admin-server.js"]
